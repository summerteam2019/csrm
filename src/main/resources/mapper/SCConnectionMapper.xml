<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kb.csrm.scConnection.mapper.SCConnectionMapper">
    <resultMap id="BaseResultMap" type="com.kb.csrm.course.dto.CourseDto">
        <result column="course_id" property="courseId" jdbcType="INTEGER" />
        <result column="teacher_id" property="teacherId" jdbcType="INTEGER" />
        <result column="college_id" property="collegeId" jdbcType="INTEGER" />
        <result column="teacher_name" property="teacherName" jdbcType="VARCHAR" />
        <result column="course_name" property="courseName" jdbcType="VARCHAR" />
        <result column="course_introduce" property="courseIntroduce" jdbcType="VARCHAR" />
        <result column="course_time" property="courseTime" jdbcType="VARCHAR" />
        <result column="course_rate" property="courseRate" jdbcType="INTEGER" />
        <result column="course_count" property="courseCount" jdbcType="INTEGER" />
        <result column="college_name" property="collegeName" jdbcType="VARCHAR" />
        <result column="faculty_name" property="facultyName" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getCourseByUserId" parameterType="int" resultMap="BaseResultMap">
        select c.*
        from student_course_connection sc, user u, course c
        where sc.user_id = #{userId}
          and u.user_id = #{userId}
          and c.course_id = sc.course_id
    </select>

    <select id="getSCConnectionByCourseId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select *
        from student_course_connection
        where course_id = #{courseId}
    </select>

    <insert id="addSCConnection" parameterType="com.kb.csrm.scConnection.dto.SCConnectionDto">
        insert into student_course_connection
        (
            user_id,
            course_id,
            sc_time
        )
        values (
            #{userId},
            #{courseId},
            CURRENT_TIME(0)
        )
    </insert>
    <select id="ifChosen" parameterType="long" resultType="int">
        select count(1)
        from student_course_connection sc
        where sc.user_id = #{userId}
          and sc.course_id = #{courseId}
    </select>

    <delete id="deleteSCConnection" parameterType="com.kb.csrm.scConnection.dto.SCConnectionDto">
        delete from student_course_connection
        where user_id = #{userId} AND course_id = #{courseId}
    </delete>
</mapper>